<Window x:Class="WPF_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Test"
        xmlns:vm="clr-namespace:WPF_Test.ViewModels"
        xmlns:cmd="clr-namespace:WPF_Test.Infrastructure.Commands"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <cmd:CloseAppCmd x:Key="CloseAppCmd"/>
    </Window.Resources>
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="33,41,0,0" TextWrapping="Wrap" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="120"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="188,41,0,0" VerticalAlignment="Top" Command="{StaticResource CloseAppCmd}"/>

    </Grid>
</Window>
